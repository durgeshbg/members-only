extends layout

block content
  .container.mx-auto.py-8
    h1.text-3xl.font-bold.text-center.text-blue-600= title
    form(action="" method="post" class="bg-white.rounded-lg.shadow-md.p-6.mt-6.space-y-6")
      .form-row.long
        label(for="title" class="block.text-gray-700.font-medium.mb-2") Title
        input#title(type="text" name="title" value=(message === undefined? "": message.title) required class="w-full.px-4.py-2.border.rounded.text-gray-700.focus:outline-none.focus:ring-2.focus:ring-blue-400")
      .form-row.long
        label(for="body" class="block.text-gray-700.font-medium.mb-2") Body
        textarea#body(name="body" required class="w-full.px-4.py-2.border.rounded.text-gray-700.focus:outline-none.focus:ring-2.focus:ring-blue-400") #{message === undefined? "": message.body}
      input(type="hidden" name="user_id" value=user._id)
      button(type="submit" class="bg-blue-500.text-white.px-6.py-2.rounded.hover:bg-blue-600.w-full") Create
