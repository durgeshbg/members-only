extends layout

block content
  .container.mx-auto.py-10
    h1.text-4xl.font-extrabold.text-center.text-blue-700.tracking-wide.mb-6= title
    if error.length
      p.error.text-red-500.text-sm.font-medium.text-center.bg-red-100.p-3.rounded-lg.shadow-inner.border.border-red-300.mt-4 #{error}
    form(action="" method="post" class="bg-gradient-to-br.from-blue-50.to-blue-100.rounded-2xl.shadow-xl.p-10.mt-8.space-y-8.max-w-lg.mx-auto.border.border-blue-300")
      .form-row
        label(for="username" class="block text-gray-800 font-bold mb-3 text-lg tracking-wide")
          span(class="after:content-['*'] after:ml-0.5 after:text-red-500") User Name
        input#username(type="text" name="username" placeholder="Enter your username" 
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition duration-200 hover:border-gray-400")
      .form-row
        label(for="password" class="block text-gray-800 font-bold mb-3 text-lg tracking-wide") Password
        input#password(type="password" name="password" placeholder="Enter your password" 
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition duration-200 hover:border-gray-400")
      button(type="submit" class="bg-gradient-to-r.from-blue-500.to-blue-600.text-white.px-6.py-3.rounded-full.hover:from-blue-600.hover:to-blue-700.w-full.font-semibold.text-lg.transition-transform.duration-200.transform.hover:scale-105.shadow-lg") Log in
    p.text-center.mt-6.text-gray-600.text-sm Not a member?
      a(href="/signup" class="text-blue-500.hover:text-blue-600.font-medium.transition-colors.duration-200") Sign up!
