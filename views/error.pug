extends layout

block content
  .flex.items-center.justify-center.min-h-screen.bg-gray-100
    .bg-white.p-8.rounded-lg.shadow-md.text-center
      h1.text-3xl.font-bold.text-red-600 #{message} &#128531;
      h2.text-xl.text-gray-700.mt-4 Status: #{status}!
      a(href="/messages" class="inline-block mt-6 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600") Go back to home
      if error && error.stack
        pre.mt-4.p-4.bg-gray-200.rounded.text-left #{error.stack}
